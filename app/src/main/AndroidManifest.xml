<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eggiverse.app">

    <!-- 인터넷 권한 추가 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".EggiverseApp"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Eggiverse"
        android:usesCleartextTraffic="false">

        <!-- 인트로 화면 (시작 화면) -->
        <activity
            android:name=".IntroActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 메인 화면 -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- 게임 액티비티 -->
        <activity android:name=".games.MemoryGameActivity" />
        <activity android:name=".games.SlidingPuzzleActivity" />
        <activity android:name=".games.StarTapGameActivity" />
        <activity android:name=".games.DoodleJumpActivity" />
        <activity android:name=".games.FlappyBirdActivity" />
        <activity android:name=".games.AlienTypingGameActivity" />
        <activity android:name=".games.RhythmGameActivity" />

        <!-- 기타 액티비티 -->
        <activity android:name=".GameSelectActivity" />
        <activity android:name=".ShopActivity" />
        <activity android:name=".MyRoomActivity" />
        <activity android:name=".SettingsActivity" />

    </application>

</manifest>