<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.Eggiverse.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog" />
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/mainfont</item>
    </style>
    <!-- 다이얼로그 슬라이드 애니메이션 -->
    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- BottomSheetDialog 투명 배경 -->
    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>


